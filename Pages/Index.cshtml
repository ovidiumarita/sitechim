<script>    const searchData = [
        { label: 'Reacția de substituție', url: '/Substitutie' },
        { label: 'Reacția de adiție', url: '/Aditie' },
        { label: 'Reacția de polimerizare', url: '/Polimerizare' },
        { label: 'Reacția de eliminare', url: '/Eliminare' },
        { label: 'Reacția de transpoziție', url: '/Transpozitie' },
        { label: 'Aminoacizi', url: '/Aminoacizi' },
        { label: 'Proteine', url: '/Proteine' },
        { label: 'Monozaharide', url: '/Monozaharide' },
        { label: 'Dizaharide', url: '/Dizaharide' },
        { label: 'Polizaharide', url: '/Polizaharide' },
        { label: 'Grăsimi', url: '/Grasimi' }
    ];
    const searchInput = document.getElementById('quick-search');
    const resultsList = document.getElementById('search-results');
    let selectedIdx = -1;
    function renderResults(results) {
        resultsList.innerHTML = '';
        if (!results.length) {
            resultsList.style.display = 'none';
            return;
        }
        results.forEach((item, idx) => {
            const li = document.createElement('li');
            li.textContent = item.label;
            li.tabIndex = 0;
            li.className = 'search-result-item';
            li.removeAttribute('style');
            li.classList.remove('bg-light', 'bg-white', 'bg-dark', 'text-dark', 'text-light');
            li.onmouseenter = () => highlight(idx);
            li.onmouseleave = () => highlight(-1);
            li.onclick = () => window.location.href = item.url;
            resultsList.appendChild(li);
        });
        resultsList.style.display = 'block';
    }
    function highlight(idx) {
        Array.from(resultsList.children).forEach((li, i) => {
            li.classList.toggle('active', i === idx);
        });
        selectedIdx = idx;
    }
    searchInput.addEventListener('input', function() {
        const val = this.value.trim().toLowerCase();
        if (!val) {
            resultsList.style.display = 'none';
            return;
        }
        const filtered = searchData.filter(x => x.label.toLowerCase().includes(val));
        renderResults(filtered);
        highlight(-1);
    });
    searchInput.addEventListener('keydown', function(e) {
        const items = Array.from(resultsList.children);
        if (!items.length) return;
        if (e.key === 'ArrowDown') {
            highlight((selectedIdx + 1) % items.length);
            e.preventDefault();
        } else if (e.key === 'ArrowUp') {
            highlight((selectedIdx - 1 + items.length) % items.length);
            e.preventDefault();
        } else if (e.key === 'Enter' && selectedIdx >= 0) {
            items[selectedIdx].click();
        } else if (e.key === 'Escape') {
            resultsList.style.display = 'none';
        }
    });
    document.addEventListener('click', function(e) {
        if (!searchInput.contains(e.target) && !resultsList.contains(e.target)) {
            resultsList.style.display = 'none';
        }
    });
    function updateSearchTheme() {
        const isDark = document.documentElement.className === 'theme-dark';
        document.documentElement.style.setProperty('--search-bg', isDark ? '#232946' : '#fff');
        document.documentElement.style.setProperty('--search-hover', isDark ? '#eebbc3' : '#f0f0f0');
    }
    updateSearchTheme();
    const themeObs = new MutationObserver(updateSearchTheme);
    themeObs.observe(document.documentElement, { attributes: true, attributeFilter: ['class'] });

    function toggleAccordion(panelId, btn) {
        var panel = document.getElementById(panelId);
        var expanded = btn.getAttribute('aria-expanded') === 'true';
        btn.setAttribute('aria-expanded', !expanded);
        panel.style.display = expanded ? 'none' : 'block';
        if(panelId === 'reactiiPanel') {
            document.getElementById('compusiPanel').style.display = 'none';
            document.querySelector('button[aria-controls="compusiPanel"]').setAttribute('aria-expanded', 'false');
        } else {
            document.getElementById('reactiiPanel').style.display = 'none';
            document.querySelector('button[aria-controls="reactiiPanel"]').setAttribute('aria-expanded', 'false');
        }
    }
    function showLoader() {
        document.getElementById('pageLoader').style.display = 'flex';
    }
    function hideLoader() {
        document.getElementById('pageLoader').style.display = 'none';
    }
    document.querySelectorAll('.theme-toggle-btn, .glass-card').forEach(function(btn) {
        btn.addEventListener('click', addRippleEffect);
    });
    function addRippleEffect(e) {
        const target = e.currentTarget;
        const circle = document.createElement('span');
        circle.className = 'ripple';
        const rect = target.getBoundingClientRect();
        const size = Math.max(rect.width, rect.height);
        circle.style.width = circle.style.height = size + 'px';
        circle.style.left = (e.clientX - rect.left - size/2) + 'px';
        circle.style.top = (e.clientY - rect.top - size/2) + 'px';
        target.appendChild(circle);
        setTimeout(() => circle.remove(), 500);
    }
</script>
